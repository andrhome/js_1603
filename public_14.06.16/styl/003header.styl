@import '001func.styl'

.val-header-outer-block
	width 100%
	background #fff
	padding 20px 0 15px
	
.val-header 
	width staticWidth
	margin 0 auto 
	display table 

.val-top-line
	display table
	width 100%
	position relative

.val-outer-left-button
	float left
	display table
	
.val-button-menu
	padding 10px 35px 10px 27px
	text-transform uppercase
	display inline-block
	position relative 
	color #000
	font-size 12px
	cursor pointer
	&:before
		content ""
		position absolute
		width 21px
		height 17px
		display inline-block
		left 0
		top 8px
		background url(../images/sprite.png) 0px 0px
	&:hover
		color generalGreenColor
	&:hover:before
		background url(../images/sprite.png) -23px 0px

.val-button-search
	padding 10px 35px 10px 27px
	text-transform uppercase
	display inline-block
	position relative 
	color #000
	font-size 12px
	cursor pointer
	&:before
		content ""
		position absolute
		width 21px
		height 17px
		display inline-block
		left 0
		top 8px
		background url(../images/sprite.png) -43px 0px
	&:hover
		color generalGreenColor
	&:hover .val-search-modal
		display block
	&:hover:before
		background url(../images/sprite.png) -61px 0px

.val-search-modal
	position absolute
	width 260px
	background-color #F6F6F6
	box-shadow -1px 4px 6px rgba(0,0,0,.09)
	border 1px solid #ddd!important
	left 0
	top 30px
	z-index 9
	padding 20px
	display none	

.val-search-modal .button
	margin 0 auto

.val-language-container
	display inline-block

.val-language-container a 
	color lightGreyText
	margin 0 5px
	padding 0 0 1px

.-active-lang
	color #000 i
	border-bottom 1px solid rgba(0,0,0, .3)

.val-outer-right-button
	float right 
	display table

.val-outer-social-button
	position absolute
	left 50%
	top 0	
	margin-left -145px

.val-outer-social-button ul 
	list-style none 
	padding 0

.val-outer-social-button ul li 
	display inline-block

.val-outer-social-button ul li a 
	width 35px
	height 35px
	display inline-block
	margin 0 5px

.val-twitter
	background url(../images/sprite.png) 0px -21px

.val-vk
	background url(../images/sprite.png) -35px -21px

.val-g
	background url(../images/sprite.png) -71px -21px
	
.val-youtube
	background url(../images/sprite.png) -107px -21px

.val-fb
	background url(../images/sprite.png) -142px -21px

.val-rss
	background url(../images/sprite.png) -178px -21px
	
.val-logo-line
	text-align center
	padding 20px
	width 100%
	
.val-widget-line
	display table 
	margin 0 auto 

.val-widget-line ul 
	list-style none
	padding 0
	
.val-widget-line ul li 
	display inline-block
	padding 0 10px
		
.val-widget-line ul li a, .val-widget-line ul li span 
	color lightGreyText
	font-size 12px 
	cursor pointer
	

.val-widget-line ul li a:hover
	color generalGreenColor
		
.val-redaction
	padding-left 20px
	position relative 
	&:before
		width 20px
		height 16px
		position absolute
		left 0
		top -1px
		content ""
		display inline-block
		background url(../images/sprite.png) -85px 0
	&:hover:before
		background url(../images/sprite.png) -105px 0

.val-market
	padding-left 20px
	position relative 
	&:before
		width 20px
		height 16px
		position absolute
		left 0
		top -1px
		content ""
		display inline-block
		background url(../images/sprite.png) -128px 1px
	&:hover:before
		background url(../images/sprite.png) -148px 1px

.val-currency-text
	padding-left 20px
	position relative 
	&:before
		width 20px
		height 16px
		position absolute
		left 0
		top -1px
		content ""
		display inline-block
		background url(../images/sprite.png) -166px 1px
	&:hover
		color generalGreenColor
	&:hover:before
		background url(../images/sprite.png) -184px 0px

.val-menu-line
	width 100%
	padding-top 20px

.val-menu-list
	list-style none
	padding 13px 2px
	border-top 2px solid #000
	display flex
	justify-content space-between
	
.val-menu-list li a
	color #000
	font-size 13px
	&:hover
		color generalGreenColor

.-val-active-menu
	color generalGreenColor i
	padding-bottom 2px
	cursor default
	border-bottom 1px solid rgba(21,148,139,.33)