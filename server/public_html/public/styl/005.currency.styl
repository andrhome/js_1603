@import '001func.styl'

.-currency-val
	position relative 
	&:hover .-new-currensy 
		display table	

.-new-currensy
	border 1px solid #ddd !important
	border-spacing 0
	box-shadow -1px 4px 6px rgba(0, 0, 0, 0.09)
	border-radius 3px
	position absolute
	margin 0 i
	width 340px
	height 256px
	background backGrey
	z-index 9
	left -170px
	top 25px
	display none

.val-currency-text
	padding-bottom 10px

.-new-currensy td
	border-bottom 1px solid #ddd
	text-align left i
	border-right none i
	padding 0
	vertical-align middle

.-new-currensy th
	border-bottom 1px solid #ddd
	vertical-align middle

.th-title td
	padding 10px 0 i

	
.-new-currensy td > span, .-new-currensy th > span, .-new-currensy td > p, .-new-currensy th > p
	display table
	width 100%
	margin 0px 5px
	font-size 12px
	color #333

.-new-currensy th > span,.-new-currensy th > p
	color #000 i
	font-weight normal i 
	
.-new-currensy span > *
	display inline-block
	vertical-align middle

.-new-currensy mark
	width 40px
	display inline-block
	background transparent
	font-weight normal
	
.-to-hight
	font-size 8px
	color generalGreenColor
	font-style normal

.-to-low
	font-size 8px
	color generalBlueColor
	font-style normal